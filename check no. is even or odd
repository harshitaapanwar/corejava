import java.util.Scanner;
class Check{
    public static void main(String[] args) 
    {
    Scanner s=new Scanner(System.in);
    System.out.print("Enter a number=");
    int a=s.nextInt();
    if(a%2==0)
    {
    System.out.print("Number is even");
    }
    else
    {
    System.out.print("Number is odd"); 
    }
    }
}
